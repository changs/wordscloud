<div class="header">
  <div class="left">
    <ul>
      <% if signed_in? %>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <li><%= link_to "Sign out", signout_path %></li>
      <% else %>
      <li><%= link_to "Sign up!", signup_path %></li>
      <li><%= link_to "Sign in!", signin_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="right">
    <% if signed_in? %>
    <span style="margin-right: 10px"><%= "Logged as #{current_user.username}  " %></span>
    <% end %>
  </div>
</div>
<div class="clear"></div>
<script type="text/javascript" charset="utf-8">
  $('li a[href|="<%= request.fullpath %>"]').addClass("active")
</script>
