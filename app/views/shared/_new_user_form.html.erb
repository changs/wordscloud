<div class="new_user_form">
  <%= form_tag new_user_path do %>
  <div class="field">
    <%= label_tag :fullname %>
    <%= text_field_tag :fullname %>
  </div>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="action">
    <%= submit_tag "Sign up!", class: "input_submit"  %>
  </div>
  <% end %>
</div>
