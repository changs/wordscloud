<div class="signin_form">
  <h2><%= @title %></h2>
  <%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me, nil, class: "near_checkbox" %>
  </div>
  <div class="action">
    <%= submit_tag "Sign in", class: "input_submit" %>
  </div>
  <% end %>
</div>
